<Window x:Name="mainWindow"
        x:Class="CrystalBlue.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrystalBlue"
        xmlns:hoconvalidator="clr-namespace:CrystalBlue.HOCONValidator.Views"
        mc:Ignorable="d"
        Title="Crystal Blue" Height="500" Width="750"
        DataContext="{Binding ElementName=mainWindow}">

    <Grid>
        <hoconvalidator:HOCONValidatorView DataContext="{Binding ValidatorViewModel}"/>
    </Grid>
</Window>
